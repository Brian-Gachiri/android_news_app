<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.brige.newsapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.brige.newsapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.brige.newsapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_messages"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/videoFormFragment"
        android:name="com.brige.newsapp.VideoFormFragment"
        android:label="Add a Video"
        tools:layout="@layout/fragment_video_form" />
    <fragment
        android:id="@+id/newsDetailsFragment"
        android:name="com.brige.newsapp.NewsDetailsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news_details" />
    <fragment
        android:id="@+id/browseFragment"
        android:name="com.brige.newsapp.BrowseFragment"
        android:label="Browse"
        tools:layout="@layout/fragment_browse" />
    <fragment
        android:id="@+id/chatDetailsFragment"
        android:name="com.brige.newsapp.ChatDetailsFragment"
        android:label="fragment_chat_details"
        tools:layout="@layout/fragment_chat_details" />
</navigation>